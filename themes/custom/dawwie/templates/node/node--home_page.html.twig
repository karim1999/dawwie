<div class="preloader js-preloader flex-center"></div>

{# Slider #}
<div class="slider style-1">
    <div class="owl-main owl-carousel owl-theme">
        {{content.field_hp_slider}}
    </div>
</div>
{# About Us #}
<section class="about-us ptb-120">
    <div class="container-fluid">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="row">
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
                    <div class="content-sec">
                        <div class="heading">
                            <h2><span></span>{{content.field_hp_s2_title.0}}</h2>
                        </div>
                        <p>
                            {{content.field_hp_s2_summary.0}}
                        </p>
                        <div class="counter-sec">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="counter-column">
                                        <div class="count_icon">
                                            <img src="{{ base_path ~ directory }}/img/safwat-3.png" />
                                        </div>
                                        <div class="counter_content">
                                          <div class="counter">{{ story_counter }}</div>
                                            <div class="title">{{'Participating stories'|t}}</div>
                                            <span>
                                              {{'#Your-story-complete-their-story'|t}}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="counter-column">
                                        <div class="count_icon">
                                            <img src="{{ base_path ~ directory }}/img/safwat-1.png" />
                                        </div>
                                        <div class="counter_content">
                                            <div class="counter">62,153</div>
                                            <div class="title">{{'Our subscribers'|t}}</div>
                                            <span>{{'Join Dawwie events'|t}}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                                    <div class="counter-column">
                                        <div class="count_icon">
                                            <img src="{{ base_path ~ directory }}/img/safwat-2.png" />
                                        </div>
                                        <div class="counter_content">
                                            <div class="counter"><div id="facebookfeed"></div></div>
                                            <div class="title">{{'Social Media'|t}}</div>
                                            <span>{{'Interact with us'|t}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 animated bounceIn wow">
                    <div class="img-sec">
                        {{content.field_hp_s2_image.0}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

{# Services #}

<div class="section-full bg-white content-inner-1 portfolio2">
    <div class="container-fluid">
        <div class="max-w600 m-auto text-center m-b30">
            <h2 class="m-t0">{{content.field_hp_s3_title.0}}</h2>
        </div>
    </div>
</div>
<div class="section-full overlay-black-dark our-projects" style="background-image:url({{ file_url(content.field_hp_s3_background_image[0]['#media'].field_media_image.entity.uri.value) }});background-size: cover;background-repeat: no-repeat;">
    <div class="container text-white">
        <div class="row m-lr0 d-flex align-items-stretch">
            {% for key, item in node.field_hp_s3_items %}
                <div class="col-lg-4 col-md-4 p-lr0 d-flex ind-ser-info-bx">
                    <div class="ind-service-info align-self-stretch">
                        <span>0{{key+1}}</span>
                        <div class="ind-service-info-in">
                            <h2> {{ item.entity.translation(language).field_hp_services_title.value }}</h2>
                            <p>{{ item.entity.translation(language).field_hp_services_summary.value }}</p>
                        </div>
                        <a href="{{ item.entity.translation(language).field_hp_services_button.0.url}}" class="site-button btn-block d-flex justify-content-between white outline outline-2">
                            <span>{{ item.entity.translation(language).field_hp_services_button.0.title}}</span>
                            <i class="ti-arrow-right"></i>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

