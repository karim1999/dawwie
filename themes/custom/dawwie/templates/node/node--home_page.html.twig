{# Testimonials #}
<section class="testimo">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <h2>{{content.field_hp_s5_title.0}}</h2>

                    <div class="carousel-inner">
                        {%for key, items in section4_stories %}

                            {% set description0 = items.0.description|render %}

                            <div class="item carousel-item {{ key == 0 ? 'active' : ' ' }}">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="testimonial">
                                            <i class="fa fa-quote-right" aria-hidden="true"></i>
                                            <p>{{ description0|length > 100 ? description0|slice(0, 100)|raw ~ '...' : description0|raw }}</p>
                                            <i class="fa fa-quote-left" aria-hidden="true"></i>
                                         <div class="details"><a href="{{items.0.alias}}">اكمل الحكاية</a></div>
                                        </div>
                                        <div class="media">
                                            <div class="media-left d-flex mr-3">
                                                <img src="{{items.0.photo}}" alt="{{items.0.title}}"/>
                                            </div>
                                            <div class="media-body">
                                                <div class="overview">
                                                    <div class="name"><b>{{items.0.title}}</b></div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {%if items|length == 2%}

                                        {% set description1 = items.1.description|render %}

                                        <div class="col-sm-6">
                                            <div class="testimonial">
                                                <i class="fa fa-quote-right" aria-hidden="true"></i>
                                                <p>{{ description1|length > 100 ? description1|slice(0, 100)|raw ~ '...' : description1|raw }}</p>
                                                <i class="fa fa-quote-left" aria-hidden="true"></i>
                                               <div class="details"><a href="{{items.1.alias}}">اكمل الحكاية</a></div>
                                            </div>
                                            <div class="media">
                                                <div class="media-left d-flex mr-3">
                                                    <img src="{{items.1.photo}}" alt="{{items.1.title}}"/>
                                                </div>
                                                <div class="media-body">
                                                    <div class="overview">
                                                        <div class="name"><b>{{items.1.title}}</b></div>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {%endif%}
                                </div>
                            </div>
                        {%endfor%}

                    </div>
                    <!-- Carousel controls -->
                    <a class="carousel-control left carousel-control-prev" href="#myCarousel" data-slide="prev">
                        <i class="fa fa-chevron-left"></i>
                    </a>
                    <a class="carousel-control left carousel-control-next" href="#myCarousel" data-slide="next">
                        <i class="fa fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--<div class="circle strong-border"></div>-->
</section>
